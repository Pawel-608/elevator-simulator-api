[*]
max_line_length = 150

[*.groovy]
ij_groovy_class_count_to_use_import_on_demand = 100
ij_groovy_names_count_to_use_import_on_demand = 100
ij_groovy_imports_layout = *, javax.**, java.**, |, org.springframework.**, |, lombok.**, |, rainer.pawel.**, |, |, $*, |
ij_groovy_label_indent_size = 4

[*.java]
ij_java_class_count_to_use_import_on_demand = 100
ij_java_names_count_to_use_import_on_demand = 100
ij_java_imports_layout = *, javax.**, java.**, |, org.springframework.**, |, lombok.**, |, rainer.pawel.**, |, |, $*, |
ij_java_keep_blank_lines_in_declarations = 1
ij_java_keep_blank_lines_in_code = 1
ij_java_keep_blank_lines_before_right_brace = 1
ij_java_blank_lines_around_field = 1
ij_java_blank_lines_around_field_in_interface = 1
ij_java_blank_lines_after_class_header = 1
ij_java_spaces_within_array_initializer_braces = true
ij_java_space_within_empty_array_initializer_braces = true
ij_java_call_parameters_wrap = normal
ij_java_method_parameters_wrap = normal
ij_java_extends_list_wrap = normal
ij_java_wrap_long_lines = true